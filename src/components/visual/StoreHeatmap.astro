---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`relative ${className}`}>
  <div class="p-6 rounded-2xl bg-bg-card border border-white/10">
    <h4 class="text-sm font-medium text-text-primary mb-4">Mağaza Isı Haritası</h4>

    <!-- Store Layout Grid -->
    <div class="relative aspect-[4/3] bg-bg-tertiary rounded-xl overflow-hidden">
      <!-- Grid lines -->
      <div class="absolute inset-0 grid grid-cols-6 grid-rows-4">
        {Array.from({ length: 24 }).map((_, i) => (
          <div class="border border-white/5"></div>
        ))}
      </div>

      <!-- Entrance -->
      <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-20 h-4 bg-cyan/30 rounded-t-lg flex items-center justify-center">
        <span class="text-[10px] text-cyan">Giriş</span>
      </div>

      <!-- Heat zones -->
      <div class="absolute top-4 left-4 w-16 h-16 rounded-lg bg-red-500/40 blur-sm flex items-center justify-center">
        <span class="text-xs text-white font-medium">Yüksek</span>
      </div>
      <div class="absolute top-4 right-8 w-20 h-20 rounded-lg bg-orange-400/30 blur-sm flex items-center justify-center">
        <span class="text-xs text-white font-medium">Orta</span>
      </div>
      <div class="absolute top-20 left-20 w-24 h-16 rounded-lg bg-yellow-400/20 blur-sm flex items-center justify-center">
        <span class="text-xs text-white font-medium">Düşük</span>
      </div>
      <div class="absolute bottom-12 right-4 w-14 h-14 rounded-lg bg-red-500/50 blur-sm"></div>

      <!-- Checkout area -->
      <div class="absolute bottom-4 right-4 w-24 h-8 bg-purple/30 rounded flex items-center justify-center">
        <span class="text-xs text-purple">Kasa</span>
      </div>

      <!-- Data points -->
      <div class="absolute top-6 left-6 w-2 h-2 bg-cyan rounded-full animate-pulse"></div>
      <div class="absolute top-12 right-12 w-2 h-2 bg-cyan rounded-full animate-pulse" style="animation-delay: 0.5s"></div>
      <div class="absolute bottom-16 left-16 w-2 h-2 bg-cyan rounded-full animate-pulse" style="animation-delay: 1s"></div>
    </div>

    <!-- Legend -->
    <div class="mt-4 flex items-center justify-center gap-6 text-xs text-text-muted">
      <div class="flex items-center gap-2">
        <div class="w-3 h-3 rounded bg-red-500/50"></div>
        <span>Yoğun</span>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-3 h-3 rounded bg-orange-400/40"></div>
        <span>Orta</span>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-3 h-3 rounded bg-yellow-400/30"></div>
        <span>Az</span>
      </div>
    </div>
  </div>
</div>
