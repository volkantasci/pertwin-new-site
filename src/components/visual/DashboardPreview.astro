---
interface Props {
  variant?: 'store' | 'ecommerce';
  class?: string;
}

const { variant = 'store', class: className = '' } = Astro.props;
---

<div class={`relative ${className}`}>
  <div class="p-6 rounded-2xl bg-bg-card border border-white/10">
    <div class="flex items-center justify-between mb-4">
      <h4 class="text-sm font-medium text-text-primary">
        {variant === 'store' ? 'StoreAnalytics Dashboard' : 'Commercelytics Dashboard'}
      </h4>
      <div class="flex items-center gap-1">
        <div class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></div>
        <span class="text-xs text-text-muted">Canlı</span>
      </div>
    </div>

    <!-- Mini Dashboard -->
    <div class="bg-bg-tertiary rounded-xl p-4">
      <!-- Top metrics row -->
      <div class="grid grid-cols-3 gap-3 mb-4">
        <div class="p-3 rounded-lg bg-bg-card/50">
          <p class="text-lg font-display font-bold text-cyan">847</p>
          <p class="text-xs text-text-muted">Ziyaretçi</p>
        </div>
        <div class="p-3 rounded-lg bg-bg-card/50">
          <p class="text-lg font-display font-bold text-purple">₺42.5K</p>
          <p class="text-xs text-text-muted">Ciro</p>
        </div>
        <div class="p-3 rounded-lg bg-bg-card/50">
          <p class="text-lg font-display font-bold text-pink">%23.4</p>
          <p class="text-xs text-text-muted">Dönüşüm</p>
        </div>
      </div>

      <!-- Chart placeholder -->
      <div class="h-24 rounded-lg bg-bg-card/30 flex items-end justify-around px-2 pb-2">
        <div class="w-4 bg-gradient-to-t from-cyan to-purple rounded-t" style="height: 40%"></div>
        <div class="w-4 bg-gradient-to-t from-cyan to-purple rounded-t" style="height: 65%"></div>
        <div class="w-4 bg-gradient-to-t from-cyan to-purple rounded-t" style="height: 45%"></div>
        <div class="w-4 bg-gradient-to-t from-cyan to-purple rounded-t" style="height: 80%"></div>
        <div class="w-4 bg-gradient-to-t from-cyan to-purple rounded-t" style="height: 55%"></div>
        <div class="w-4 bg-gradient-to-t from-cyan to-purple rounded-t" style="height: 90%"></div>
        <div class="w-4 bg-gradient-to-t from-cyan to-purple rounded-t" style="height: 70%"></div>
      </div>
      <p class="text-xs text-text-muted text-center mt-2">Son 7 Günlük Performans</p>

      <!-- Bottom insights -->
      <div class="mt-4 grid grid-cols-2 gap-3">
        <div class="flex items-center gap-2 text-xs">
          <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
          </svg>
          <span class="text-text-secondary">+12% Geçen Haftaya Göre</span>
        </div>
        <div class="flex items-center gap-2 text-xs">
          <svg class="w-4 h-4 text-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
          </svg>
          <span class="text-text-secondary">AI Tahmin: 920 Ziyaretçi</span>
        </div>
      </div>
    </div>
  </div>
</div>
