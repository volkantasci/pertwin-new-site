---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

const steps = [
  { label: 'Giriş', icon: 'door', color: 'cyan' },
  { label: 'Keşif', icon: 'search', color: 'blue' },
  { label: 'İnceleme', icon: 'eye', color: 'purple' },
  { label: 'Karar', icon: 'thinking', color: 'pink' },
  { label: 'Satın Alma', icon: 'check', color: 'green' },
];
---

<div class={`relative ${className}`}>
  <div class="p-6 rounded-2xl bg-bg-card border border-white/10">
    <h4 class="text-sm font-medium text-text-primary mb-6">Müşteri Yolculuğu</h4>

    <div class="relative">
      <!-- Connection line -->
      <div class="absolute top-6 left-0 right-0 h-0.5 bg-gradient-to-r from-cyan via-purple to-green-400"></div>

      <!-- Steps -->
      <div class="relative flex justify-between">
        {steps.map((step, index) => (
          <div class="flex flex-col items-center">
            <div class={`w-12 h-12 rounded-full flex items-center justify-center z-10 ${
              step.color === 'cyan' ? 'bg-cyan/20 text-cyan' :
              step.color === 'blue' ? 'bg-blue/20 text-blue' :
              step.color === 'purple' ? 'bg-purple/20 text-purple' :
              step.color === 'pink' ? 'bg-pink/20 text-pink' :
              'bg-green-500/20 text-green-400'
            }`}>
              {step.icon === 'door' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
              )}
              {step.icon === 'search' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              )}
              {step.icon === 'eye' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              )}
              {step.icon === 'thinking' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              )}
              {step.icon === 'check' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              )}
            </div>
            <span class="mt-3 text-xs text-text-muted">{step.label}</span>
          </div>
        ))}
      </div>
    </div>

    <!-- Insights -->
    <div class="mt-8 grid grid-cols-2 gap-4">
      <div class="p-3 rounded-lg bg-cyan/10 border border-cyan/20">
        <p class="text-xs font-medium text-cyan">Ortalama Süre</p>
        <p class="text-lg font-display font-bold text-text-primary mt-1">12 dk</p>
      </div>
      <div class="p-3 rounded-lg bg-purple/10 border border-purple/20">
        <p class="text-xs font-medium text-purple">En Çok Zaman</p>
        <p class="text-lg font-display font-bold text-text-primary mt-1">İnceleme</p>
      </div>
    </div>
  </div>
</div>
