---
const currentYear = new Date().getFullYear();

const products = [
  { label: 'StoreAnalytics AI', href: '/store' },
  { label: 'Commercelytics AI', href: '/ecommerce' },
];

const company = [
  { label: 'Hakkımızda', href: '/about' },
  { label: 'Blog', href: '/blog' },
  { label: 'İletişim', href: '/contact' },
];

const legal = [
  { label: 'Gizlilik Politikası', href: '/privacy' },
  { label: 'Kullanım Şartları', href: '/terms' },
  { label: 'Çerez Politikası', href: '/cookies' },
];

const social = [
  { label: 'LinkedIn', href: 'https://linkedin.com/company/pertwin', icon: 'linkedin' },
  { label: 'Twitter', href: 'https://twitter.com/pertwin', icon: 'twitter' },
];
---

<footer class="bg-bg-secondary border-t border-white/5">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-2 mb-4">
          <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-cyan to-purple flex items-center justify-center">
            <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <span class="text-xl font-display font-bold text-text-primary">PerTwin</span>
        </a>
        <p class="text-sm text-text-muted max-w-xs">
          Veriden Aksiyona, Tek Platform. AI destekli perakende analitiği çözümleri.
        </p>
      </div>

      <!-- Products -->
      <div>
        <h4 class="text-sm font-semibold text-text-primary mb-4">Ürünler</h4>
        <ul class="space-y-3">
          {products.map((item) => (
            <li>
              <a href={item.href} class="text-sm text-text-muted hover:text-cyan transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="text-sm font-semibold text-text-primary mb-4">Şirket</h4>
        <ul class="space-y-3">
          {company.map((item) => (
            <li>
              <a href={item.href} class="text-sm text-text-muted hover:text-cyan transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h4 class="text-sm font-semibold text-text-primary mb-4">Yasal</h4>
        <ul class="space-y-3">
          {legal.map((item) => (
            <li>
              <a href={item.href} class="text-sm text-text-muted hover:text-cyan transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="mt-12 pt-8 border-t border-white/5 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-text-muted">
        &copy; {currentYear} PerTwin. Tüm hakları saklıdır.
      </p>
      <div class="flex items-center gap-4">
        {social.map((item) => (
          <a
            href={item.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-muted hover:text-cyan transition-colors"
            aria-label={item.label}
          >
            {item.icon === 'linkedin' && (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            )}
            {item.icon === 'twitter' && (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            )}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
