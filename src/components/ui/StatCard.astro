---
interface Props {
  value: string;
  label: string;
  trend?: 'up' | 'down' | 'neutral';
  trendValue?: string;
  variant?: 'cyan' | 'purple' | 'pink' | 'default';
  class?: string;
}

const { value, label, trend, trendValue, variant = 'default', class: className = '' } = Astro.props;

const variantColors = {
  default: 'text-text-primary',
  cyan: 'text-cyan',
  purple: 'text-purple',
  pink: 'text-pink',
};

const trendColors = {
  up: 'text-green-400',
  down: 'text-red-400',
  neutral: 'text-text-muted',
};
---

<div class={`p-6 rounded-2xl bg-bg-card border border-white/10 ${className}`}>
  <div class="flex items-start justify-between">
    <div>
      <p class={`text-3xl lg:text-4xl font-display font-bold ${variantColors[variant]}`}>
        {value}
      </p>
      <p class="mt-2 text-sm text-text-muted">{label}</p>
    </div>
    {trend && trendValue && (
      <span class={`inline-flex items-center text-sm font-medium ${trendColors[trend]}`}>
        {trend === 'up' && (
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
          </svg>
        )}
        {trend === 'down' && (
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        )}
        {trendValue}
      </span>
    )}
  </div>
</div>
