---
interface Props {
  variant?: 'default' | 'glass' | 'gradient';
  padding?: 'sm' | 'md' | 'lg';
  hover?: boolean;
  class?: string;
}

const { variant = 'default', padding = 'md', hover = false, class: className = '' } = Astro.props;

const baseStyles = 'rounded-2xl';

const variants = {
  default: 'bg-bg-card border border-white/10',
  glass: 'bg-bg-card/50 backdrop-blur-lg border border-white/10',
  gradient: 'bg-gradient-to-b from-bg-card to-bg-tertiary border border-white/10',
};

const paddings = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const hoverStyles = hover ? 'transition-all duration-300 hover:border-cyan/30 hover:-translate-y-1 hover:shadow-lg hover:shadow-cyan/5' : '';

const classes = `${baseStyles} ${variants[variant]} ${paddings[padding]} ${hoverStyles} ${className}`;
---

<div class={classes}>
  <slot />
</div>
