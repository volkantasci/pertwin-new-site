---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
}

const { variant = 'primary', size = 'md', href, class: className = '' } = Astro.props;

const baseStyles = 'inline-flex items-center justify-center font-semibold transition-all duration-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-bg-primary';

const variants = {
  primary: 'text-bg-primary bg-gradient-to-r from-cyan to-purple hover:opacity-90 focus:ring-cyan',
  secondary: 'text-text-primary bg-bg-tertiary border border-white/10 hover:bg-bg-card hover:border-cyan/30 focus:ring-cyan',
  ghost: 'text-text-secondary hover:text-cyan hover:bg-white/5 focus:ring-cyan',
};

const sizes = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-5 py-2.5 text-sm',
  lg: 'px-6 py-3 text-base',
};

const classes = `${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`;

const Element = href ? 'a' : 'button';
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button class={classes}>
    <slot />
  </button>
)}
