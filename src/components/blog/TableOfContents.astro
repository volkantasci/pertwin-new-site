---
interface TOCItem {
  text: string;
  slug: string;
  depth: number;
}

interface Props {
  items: TOCItem[];
  class?: string;
}

const { items, class: className = '' } = Astro.props;
---

{items.length > 0 && (
  <nav class={`p-4 rounded-xl bg-bg-card border border-white/10 ${className}`}>
    <h4 class="text-sm font-semibold text-text-primary mb-4">İçindekiler</h4>
    <ul class="space-y-2">
      {items.map((item) => (
        <li>
          <a
            href={`#${item.slug}`}
            class={`text-sm text-text-muted hover:text-cyan transition-colors ${
              item.depth === 3 ? 'pl-4' : ''
            }`}
          >
            {item.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
