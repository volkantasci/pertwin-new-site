---
import Card from '../ui/Card.astro';
import Icon from '../ui/Icon.astro';

interface Feature {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  features: Feature[];
  columns?: 2 | 3 | 4;
  class?: string;
}

const { features, columns = 3, class: className = '' } = Astro.props;

const gridCols = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-2 lg:grid-cols-3',
  4: 'md:grid-cols-2 lg:grid-cols-4',
};
---

<div class={`grid gap-6 ${gridCols[columns]} ${className}`}>
  {features.map((feature) => (
    <Card hover>
      <div class="w-12 h-12 rounded-xl bg-cyan/10 flex items-center justify-center mb-4">
        <Icon name={feature.icon} size="lg" class="text-cyan" />
      </div>
      <h3 class="text-lg font-display font-semibold text-text-primary mb-2">
        {feature.title}
      </h3>
      <p class="text-sm text-text-muted">
        {feature.description}
      </p>
    </Card>
  ))}
</div>
